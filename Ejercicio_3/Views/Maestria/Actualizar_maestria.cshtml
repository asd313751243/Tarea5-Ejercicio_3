@model Maestria
@{
}
<h1>Update_Maestria</h1>

<form asp-controller="Maestria" asp-action="Actualizar_maestria" method="post">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label>Nombre</label>
            <input asp-for="Nombre_Maestria" type="text" class="form-control" value="@CRUD.Maestrias[ViewBag.ID].Nombre_Maestria" required>
        </div>
        <div class="input-group-prepend">
            <label>Duracion de meses</label>
            <input asp-for="Duracion_Mes_Maestria" type="number" class="form-control" value="@CRUD.Maestrias[ViewBag.ID].Duracion_Mes_Maestria" required>
        </div>
        <div class="input-group-prepend">
            <label>Alumno</label>
            <label asp-for="CURP_Alumno" class="control-label"></label>
            <select asp-for="CURP_Alumno" class="form-control">
                @foreach (var item in CRUD.Alumnos)
                {

                    if (item.CURP_Alumno == CRUD.Maestrias[ViewBag.ID].CURP_Alumno)
                    {
                        <option value="@item.CURP_Alumno" selected="selected">@item.CURP_Alumno - @item.Nombre_Alumno</option>
                    }
                    else
                    {
                        <option value="@item.CURP_Alumno">@item.CURP_Alumno - @item.Nombre_Alumno</option>
                    }
                }
            </select>
            <span asp-validation-for="CURP_Alumno" class="text-danger"></span>
        </div>
    </div>
    <p>
        <input class="btn btn-primary" type="submit" value="Agregar">
    </p>

</form>