@{
}
<h1>
    Lista_Universidad
</h1>

<a class="btn btn-success" asp-area="" asp-controller="Universidad" asp-action="Agregar_universidad">Agregar</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID_Universidad</th>
            <th scope="col">Nombre</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var universidad in CRUD.Universidads)
        {
            <tr>
                <th scope="row">@universidad.Id_Universidad</th>
                <td>@universidad.Nombre_Universidad</td>
                <td><a class="btn btn-primary" asp-area="" asp-controller="Universidad" asp-action="Actualizar_universidad" asp-route-id="@universidad.Id_Universidad">Actualizar</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Universidad" asp-action="Eliminar_universidad_yes" asp-route-id="@universidad.Id_Universidad">Eliminar</a></td>
            </tr>
        }

    </tbody>

</table>
>