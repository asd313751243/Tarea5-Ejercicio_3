@{
}
<h1>Lista_Universidad_Docente</h1>

<a class="btn btn-success" asp-area="" asp-controller="Universidad_Tiene_Docente" asp-action="Agregar_universidad_tiene_docente">Agregar</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID_Universidad_Docente</th>
            <th scope="col">ID_Universidad</th>
            <th scope="col">Nombre_Universidad</th>
            <th scope="col">ID_Docente</th>
            <th scope="col">Nombre_Docente</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var universidad_tiene_docente in CRUD.Universidad_Tiene_Docentes)
        {
            <tr>
                <th scope="row">@universidad_tiene_docente.Id_Universidad_Docente</th>
                <td>@universidad_tiene_docente.Id_Universidad</td>
                <td>@universidad_tiene_docente.Nombre_Universidad</td>
                <td>@universidad_tiene_docente.Id_Docente</td>
                <td>@universidad_tiene_docente.Nombre_Docente</td>
                <td><a class="btn btn-primary" asp-area="" asp-controller="Universidad_Tiene_Docente" asp-action="Actualizar_universidad_tiene_docente" asp-route-id="@universidad_tiene_docente.Id_Universidad_Docente">Actualizar</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Universidad_Tiene_Docente" asp-action="Eliminar_universidad_tiene_docente" asp-route-id="@universidad_tiene_docente.Id_Universidad_Docente">Eliminar</a></td>
            </tr>
        }

    </tbody>

</table>
