@{
}
<h1>Lista_Docente</h1>

<a class="btn btn-success" asp-area="" asp-controller="Docente" asp-action="Agregar_docente">Agregar</a>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID_Docente</th>
            <th scope="col">Nombre</th>
            <th scope="col">Telefono</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var docente in CRUD.Docentes)
        {
            <tr>
                <th scope="row">@docente.Id_Docente</th>
                <td>@docente.Nombre_Docente</td>
                <td>@docente.Tele_Docente</td>
                <td><a class="btn btn-primary" asp-area="" asp-controller="Docente" asp-action="Actualizar_docente" asp-route-id="@docente.Id_Docente">Actualizar</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Docente" asp-action="Eliminar_docente_yes" asp-route-id="@docente.Id_Docente">Eliminar</a></td>
            </tr>
        }

    </tbody>

</table>
